<div class="categry" >
{% for category in categories %}

<div>

<ul>

<li class="list-unstyled cate">

<button class="categoryList" >
<img style="width:50px;height:50px;" src="/Opencart-Theme-Development/image/{{ category.image}}" alt="{{ category.image}}" title="{{ category.image}}" />
<a href="{{ category.href }}">{{ category.name }}</a>
</button>


</ul>
</div>
{% endfor %}
</div>

<style>
.categry{
  display: flex;
  padding-top: 10px;
      justify-content: center;
}
}
.cate{
  border-radius: 5px;
  box-shadow: 0 0 5px #ccc;
  }

 .categry a{
    color: black;
    font-size: unset;
}

@media screen and (max-width: 767px) {
  .categry{
display:grid;
grid-template-columns: 1fr 1fr;

  }

.row {
    margin-bottom: 0;
}


}
@media screen and (min-width: 770px) and (max-width: 1200px) {
  .categry{
display:grid;
grid-template-columns: 1fr 1fr 1fr 1fr;

  }

.row {
    margin-bottom: 0;
}


}

.categoryList{
  height:100px;
  width:100px;
  border: none;
  
}
.categoryList img{
  height:50px;
  width:50px;
}
.categoryList a{
  text-decoration: none;
  color: black;
  font-size: 15px;
  font-weight: 400;
}
.categoryList:hover{
  background-color: #f5f5f5;
  border-radius: 5px;
  box-shadow: 0 0 5px #ccc;
}



</style>




